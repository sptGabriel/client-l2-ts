{
  "declaration": true,
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "removeComments": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "**/dist/**/*.d.ts",
    "dist",
    "node_modules",
    "examples",
    "proxy",
  ]
}